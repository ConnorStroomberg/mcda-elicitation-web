<Context allowLinking="true">
	<Manager pathname="" /> <!-- disable session persistence since it doesn't work for OAuth anyway -->

<Resource name="jdbc/mcdaweb" auth="Container"
          type="javax.sql.DataSource" driverClassName="${MCDAWEB_DB_DRIVER}"
          url="${MCDAWEB_DB_URL}"
          username="${MCDAWEB_DB_USERNAME}" password="${MCDAWEB_DB_PASSWORD}"
          maxActive="20" maxIdle="10" maxWait="-1"/>

</Context>	
